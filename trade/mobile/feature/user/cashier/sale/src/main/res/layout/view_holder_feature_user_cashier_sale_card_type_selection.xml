<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_64sdp"
    android:background="?selectableItemBackground"
    android:padding="@dimen/_10sdp"
    tools:ignore="PrivateResource">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/card_type_image_view"
        android:layout_width="@dimen/_72sdp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/drawable_feature_user_cashier_sale_vector_drawable_card_other" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/card_type_text_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:paddingStart="@dimen/_16sdp"
        android:textAppearance="@style/Presentation.TextAppearance.Regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/card_type_image_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Humo" />

</androidx.constraintlayout.widget.ConstraintLayout>